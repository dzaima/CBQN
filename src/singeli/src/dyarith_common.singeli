def rootty{T if primt{T}} = T
def rootty{[_]T} = T

def is_s{X} = issigned{rootty{X}}
def is_u{X} = isunsigned{rootty{X}}

def ty_sc{O, R} = R # keep floats as-is
def ty_sc{O, R if is_s{O} and is_u{R}} = ty_s{R}
def ty_sc{O, R if is_u{O} and is_s{R}} = ty_u{R}



# + & -
def ar_chk1{(__add), M, w:T, x:T, r:T} = tup{'any_top', M{(w^r) & (x^r)}}
def ar_chk1{(__sub), M, w:T, x:T, r:T} = tup{'any_top', M{(w^x) & (w^r)}}
def ar_chk1{(__add), M, w:T=[_]E, x:T, r:T if hasarch{'AARCH64'} or width{E}<=16} = tup{'anyne', __adds{w,x}, r}
def ar_chk1{(__sub), M, w:T=[_]E, x:T, r:T if hasarch{'AARCH64'} or width{E}<=16} = tup{'anyne', __subs{w,x}, r}
def ar_chk1{(__add), M, w:T, x:T, r:T if hasarch{'X86_64'} and width{T}<=256} = tup{'any_top', M{ty_s{w>r} ^ x}}
def ar_chk1{(__sub), M, w:T, x:T, r:T if hasarch{'X86_64'} and width{T}<=256} = tup{'any_top', M{ty_s{x>w} ^ r}}



def ar_chk2{F, M, w:T, x:T if is_s{T} and (same{F,__add} or same{F,__sub})} = {
  r:= F{w,x}
  tup{r, ar_chk1{F, M, w, x, r}}
}

# ×
def ar_chk2{F==__mul, M, w:T=[_](i8), x:T if hasarch{'X86_64'}} = {
  def wp = mzip128{w, lt_hom{T, w, T**0}}
  def xp = mzip128{x, lt_hom{T, x, T**0}}
  def rp = each{__mul, wp, xp}
  if (M{0}) { # masked check
    def bad = each{{v:V} => ne_hom{V, (v<<8)>>8, v}, rp}
    tup{packs128{rp}, tup{'any_hom', M{packs128{bad}}}}
  } else { # unmasked check; can do check in a simpler way
    def bad = each{{v} => ty_s{v ^ (v>>15)}, rp}
    def RU = re_el{u16,T}
    tup{packs128{rp}, tup{'and_some', RU~~tree_fold{|, bad}, RU**0xff80}}
  }
}
def ar_chk2{F==__mul, M, w:T=[_](i16), x:T if hasarch{'X86_64'}} = {
  rl:= __mul{w,x}
  rh:=  mulh{w,x}
  tup{rl, tup{'anyne', rh, rl>>15}}
}
