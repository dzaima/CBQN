def ar_chk2{F==__mul, M, w:T=[_]E, x:T if hasarch{'AARCH64'}} = {
  def {rl, rh} = pack{...mulw_split{w, x}}
  tup{rl, tup{'any_hom', M{rh != (rl >> (width{E}-1))}}}
}



local def runner{u, R, F} = {
  def c = ~u
  
  def run{F, M, w, x} = { show{'todo', c, R, F, w, x}; emit{void,'__builtin_abort'}; w }
  
  def run{F, M, w:T, x:T if c and R!=u32} = {
    ar_chk2{F, M, w, x}
  }
  
  def run{F, M, w, x if u} = tup{F{w, x}, tup{'none'}} # trivial base implementation
  
  def toggle_top{x:X=[_]E} = x ^ X**(1<<(width{E}-1))
  def run{F==__sub, M, w:VU, x:VU if c and is_u{VU}} = { # 'b'-'a'
    def VS = ty_s{VU}
    run{F, M, VS~~toggle_top{w}, VS~~toggle_top{x}}
  }
  def run{F, M, w:VU, x:VS if c and is_u{VU} and is_s{VS}} = { # 'a'+3, 'a'-3
    def {res, ok} = run{F, M, VS~~toggle_top{w}, x}
    tup{toggle_top{VU~~res}, ok}
  }
  def run{F==__add, M, w:VS, x:VU if c and is_s{VS} and is_u{VU}} = run{F, M, x, w} # 3+'a' → 'a'+3
  
  def run{F, M, w:VW, x:VX if c and R==u32 and (same{F,__add} or same{F,__sub})} = { # 'a'+1, 'a'-1
    r:= F{ty_u{w}, ty_u{x}}
    tup{re_el{R, VW}~~r, tup{'any_hom', M{r > type{r}**1114111}}}
  }
  run
}

# any_hom, any_top already give masked vals; anyne doesn't, and and_some assumes no masking
local def run_chk_any{F, vals} = { F{...each{select{.,1}, vals}} }
local def run_chk{'any_hom',  vals, M} = run_chk_any{any_hom, vals}
local def run_chk{'any_top',  vals, M} = run_chk_any{any_top, vals}
local def run_chk{'none',     vals, M} = 0
local def run_chk{'and_some', vals, M if ~M{0}} = ~tree_fold{&, each{and_bit_none, ...slice{flip{vals}, 1}}}
local def run_chk{'anyne',    vals, M} = {
  def i{vals} = {
    def {_,xs,ys} = flip{vals}
    assert{M{0} == 0}
    ~all_hom{M, ...each{==, xs, ys}}
  }
  def i{{{_,x,y}}} = anyne{x, y, M}
  i{vals}
}

local def ar_process{F, run, overflow, M, is, cw, cx, TY} = {
  def {values, checks} = flip{each{{w1, x1} => run{F, M, w1, x1}, cw, cx}}
  def ctype = one_val{each{select{.,0}, checks}}
  if (rare{run_chk{ctype, checks, M}}) overflow{select{is,0}*vcount{TY}}
  each{{c} => TY~~c, values}
}

local def arith_aa_impl{vw, mode, F, W, X, R, w, x, r, len} = {
  # show{F, mode, W, X, R}
  if (R==u1) {
    def bulk = vw/64
    def VT = [bulk]u64
    @for_mu{bulk, 4}(r in tup{'g',*u64~~r}, cw in tup{VT,*u64~~w}, cx in tup{VT,*u64~~x} over cdiv{len, 64}) r{each{F,cw,cx}}
  } else if (same{F,__mul} and W!=u1 and X==u1 and W==R) { # 0‿1‿1‿1‿1‿0‿1‿1×3‿1‿4‿1‿5‿9‿2‿6
    def bulk = vw / width{W}
    def TU = ty_u{R}
    def TV = [bulk]TU
    
    @for_mu{bulk, 2}(sr in tup{'g',*TU~~r}, cw in tup{TV,*TU~~w}, cx in tup{'b',TV,x} over len) {
      sr{each{&, cw, cx}}
    }
  } else {
    def bulk = vw / __max{__max{width{W}, width{X}}, width{R}}
    def overflow = tern{mode==1, {i}=>return{i}, tern{mode==2, {i}=>return{1}, 0}}
    def TY = [bulk]R
    
    def run = runner{same{overflow, 0}, R, F}
    
    def unr = tern{mode==0, 2, 1} # 2x unroll non-overflowing cases; suppresses clang's default unrolling, which unrolls a lot more; 2x appears to be plenty
    @for_mu{bulk, unr}(sr in tup{'g',*R~~r}, cw in tup{ty_sc{W,TY},*W~~w}, cx in tup{ty_sc{X,TY},*X~~x}, M in 'm' over is to len) {
      sr{ar_process{F, run, overflow, M, is, cw, cx, TY}}
    }
  }
}

# mode:
#  0: void return, no overflow check (also mode=3)
#  1: on overflow, returns position
#  2: on overflow, returns 1
fn arith_aa{mode, F, W, X, R}(r:*void, w:*void, x:*void, len:u64) : tern{mode==1 or mode==2, u64, void} = {
  def vw = arch_defvw{}
  arith_aa_impl{vw, mode, F, W, X, R, w, x, r, len}
  match (mode) {
    {0} => {}; {3} => {}
    {1} => len
    {2} => 0
  }
}

# mode:
#  0: returns position on overflow
#  1: returns 1 on overflow
#  2: returns length (i.e. mode≡0 but known no overflow)
#  3: returns 0      (i.e. mode≡1 but known no overflow)
#  4: void return, no overflow check
fn arith_sa{mode, F, swap, W, X, R}(r:*void, w:u64, x:*void, len:u64) : tern{mode==4, void, u64} = {
  def vw = arch_defvw{}
  # show{F, swap, mode, W, X, R}
  assert{len>0}
  def bulk = vw / __max{width{W}, width{R}}
  def TY = [bulk]R
  def overflow = tern{mode==1, {i}=>return{1}, {i}=>return{i}}
  
  def run = runner{(R==f64) | (mode>=2), R, F}
  cw:= ty_sc{W, TY}**get_packed_scal{W, w}
  
  def unr = tern{mode>=2, 2, 1} # same as in arithAAimpl
  @for_mu{bulk, unr}(sr in tup{'g',*R~~r}, cx in tup{ty_sc{X,TY},*X~~x}, M in 'm' over is to len) {
    def cws = length{is}**cw
    sr{ar_process{F, run, overflow, M, is, tern{swap,cx,cws}, tern{swap,cws,cx}, TY}}
  }
  
  if (mode==1 or mode==3) 0
  else len
}

def get_packed_scal{T, v:(u64)} = trunc{T, v}
def get_packed_scal{T, v:(u64) if T==f64} = interp_f64{v}
